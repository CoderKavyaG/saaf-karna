{
  "manifest_version": 3,
  "name": "YouTube Focus Mode",
  "version": "1.0",
  "description": "Hide distracting YouTube content to stay focused on learning and educational videos.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
